{% extends 'master.twig' %}

{% block body %}

{% include 'include/searchForm.twig' %}
<div id="wrapper">
	<div class="contentIn">
		<article>
			<section>
				<h2 class="ttl01">人気の動画<span>Popular Clip</span></h2>
				<ul class="clipList hot">
					{% for recipe in recipes %}
					<li>
						<a href="{{ siteUrl('recipe') }}/{{ recipe.id }}">
							<div class="thumb">
								<img src="/candy/public/thumb/{{ recipe.member_id }}/{{ recipe.thumb }}" alt="">
								<div class="status">
									<span class="favo">♡99,999</span>
									<span class="time">2:10</span>
								</div>
							</div>
							<div class="clipInfo">
								<div class="clipTitle">{{ recipe.title }}</div>
								<div class="clipName">
									<span class="userName">{{ recipe.member_name }}</span>
								</div>
								<div class="tag">{{ recipe.tag }}</div>
							</div>
						</a>
					</li>
					{% endfor %}
				</ul>
				<ul class="pagination">
					{{ pager|raw }}
				</ul>
			</section>
		</article>
	</div>
</div>
{% endblock %}
