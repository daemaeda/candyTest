{% extends 'master.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {% include 'include/flashMessage.twig' %}
                <div class="login-panel panel panel-default" style="margin-top:40px">
                    <div class="panel-heading">
                        <h3 class="panel-title">WP32評価課題</h3>
                    </div>
                    <div class="panel-body">
                        <form method="post" action="{{ siteUrl('/login') }}">
                            {{ csrfTokenHiddenInput | raw }}
                            <input type="hidden" name="redirect" value="{{ flash.redirect ? : redirect }}">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="メールアドレス" name="usMail" type="email"
                                           autofocus value="{{ flash.usMail }}">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="パスワード" name="usPassword" type="password"
                                           value="">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-block">ログイン</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}